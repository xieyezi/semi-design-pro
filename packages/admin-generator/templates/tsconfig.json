{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"noEmit": true,
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@config/*": ["src/config/*"],
			"@uitls/*": ["src/uitls/*"],
			"@pages/*": ["src/pages/*"],
			"@styles/*": ["src/styles/*"],
      "@mock/*": ["mock/*"]
		}
	},
	"include": ["./src"]
}
